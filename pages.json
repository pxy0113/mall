{
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/tabBar/home",
			"style": {
				"navigationBarTitleText": "首页",
				"enablePullDownRefresh": true,
				"onReachBottomDistance":50,
				"app-plus": {
					"titleNView": false ,//禁用原生导航栏
					"softinputNavBar":"none"
				}
			}
		},
		{
			"path": "pages/tabBar/category",
			"style": {
				"app-plus": {
					"titleNView": false ,//禁用原生导航栏
					"bounce":"none"
					
				}
			}
		},
		{
			"path": "pages/tabBar/cart",
			"style": {
				"enablePullDownRefresh": true,
				"navigationBarTitleText": "购物车",
				"app-plus": {
					"titleNView": false ,//禁用原生导航栏
					"softinputNavBar":"none"
				}
			}
		},
		{
			"path": "pages/tabBar/user",
			"style": {
				"enablePullDownRefresh": true,
				"app-plus": {
					"titleNView": false //禁用原生导航栏
					
				}
			}
		}
        ,{
            "path" : "pages/order/confirmation",
            "style": {
            	"navigationBarTitleText": "确认订单",
				"softinputNavBar":"none"
            }
        }
    ],
	"subPackages": [{
		"root":"goodPage",
		"pages": [{
			    "path" : "goods/goods-list",
			    "style" : {
					"navigationBarTitleText" : "",
					"enablePullDownRefresh": true
				}
		},{
			    "path" : "goods/goods",
			    "style" : {
					"navigationBarTitleText" : "",
					"onReachBottomDistance":50,
					"h5":{
						"titleNView":false
					},
					"app-plus": {
						"titleNView": false ,//禁用原生导航栏
						"bounce":"none"
					}
				}
		},{
		    "path" : "search/searchView",
		    "style" : {
				"navigationBarTitleText":"搜索商品",
				"backgroundColorTop":"#ffffff",
				"backgroundColorBottom":"#ffffff"
			}
		},{
		    "path" : "goods/discuss",
		    "style" : {
				"navigationBarTitleText": "评论列表",
				"backgroundColorTop":"#ffffff",
				"backgroundColorBottom":"#ffffff"
			}
		}]
	},{
		"root":"payPage",
		"pages":[{
            "path" : "payment/payment",
            "style" : {
				"navigationBarTitleText":"订单支付",
				"backgroundColorTop":"#ffffff",
				"backgroundColorBottom":"#ffffff"
			}
        }
        ,{
            "path" : "success/success",
            "style" : {
				"navigationBarTitleText":"支付成功",
				"backgroundColorTop":"#ffffff",
				"backgroundColorBottom":"#ffffff"
			}
        }]
		
	},{
		"root":"userPage",
		"pages":[{
            "path" : "coupon/coupon",
            "style" : {
				"navigationBarTitleText": "优惠券",
				"app-plus":{
					"bounce":"none"
				}
			}
        }
        ,{
            "path" : "keep/keep",
            "style" : {
				"navigationBarTitleText": "我的收藏",
				"app-plus":{
					"bounce":"none"
				}
			}
        }
        ,{
            "path" : "address/address",
            "style" : {
				"navigationBarTitleText":"地址管理",
				"backgroundColorTop":"#ffffff",
				"backgroundColorBottom":"#ffffff"
			}
        }
        ,{
            "path" : "address/edit/edit",
            "style" : {
				"navigationBarTitleText":"编辑收件人地址",
				"backgroundColorTop":"#ffffff",
				"backgroundColorBottom":"#ffffff"
			}
        }
        ,{
            "path" : "deposit/deposit",
            "style" : {
				"navigationBarTitleText":"充值",
				"backgroundColorTop":"#ffffff",
				"backgroundColorBottom":"#ffffff"
			}
        }
		,{
            "path" : "order_list/order_list",
            "style" : {
				"navigationBarBackgroundColor":"#f8f8f8",
				"backgroundColorTop":"#f3f3f3",
				"backgroundColorBottom":"#ffffff"
			}
        }
        ,{
            "path" : "setting/setting",
            "style" : {
				"navigationBarTitleText":"我的设置",
				"backgroundColorTop":"#ffffff",
				"backgroundColorBottom":"#f3f3f3"
			}
        }
        ,{
            "path" : "myQR/myQR",
            "style" : {
				"navigationBarTitleText":"我的二维码",
				"app-plus":{
					"bounce":"none"
				}
			}
        }]
	}],
	 "preloadRule": {
        "pages/tabBar/home": {
            "network": "all",
            "packages": ["__APP__"]
        },
		"pages/order/confirmation": {
			"network":"all",
			"packages":["payPage"]
		},
		"pages/tabBar/user": {
			"network":"all",
			"packages":["userPage"]
		}
    },
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText" : "",
		"navigationBarBackgroundColor":"#8bbce7",
		"backgroundColorTop":"#8bbce7",
		"backgroundColor" : "#ffffff",
		"backgroundColorBottom":"#ffffff"
	},
	"tabBar": {
		"color": "#333333",
		"selectedColor": "#8bbce7",
		"borderStyle": "black",
		"backgroundColor": "#ffffff",
		"list": [{
				"pagePath": "pages/tabBar/home",
				"iconPath": "static/img/tabBar/home.png",
				"selectedIconPath": "static/img/tabBar/home-on.png",
